@* Importação da fonte medieval já está no CSS global *@

<div class="top-row medieval-navbar">
    <div class="container-fluid">
        <a class="navbar-brand medieval-title" href="">Starfinder.Shield</a>
        <button title="Menu de Navegação" class="navbar-toggler medieval-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable medieval-menu" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link medieval-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Início
            </NavLink>
        </div>    
        <div class="nav-item px-3">
            <NavLink class="nav-link medieval-link medieval-conditions-btn" href="/condicoes">
                <span class="bi bi-shield-shaded" aria-hidden="true"></span> Condições de Jogo
            </NavLink>
        </div>

        <div class="nav-item px-3">
            @* Equipamentos com submenu *@
            <div @onclick:stopPropagation="true">
                <button class="nav-link medieval-link" @onclick:stopPropagation="true" @onclick="ToggleEquipamentos">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Equipamentos
                </button>
                @if (showEquipamentos)
                {
                    <div class="ms-3" @onclick:stopPropagation="true">
                        <NavLink class="nav-link medieval-link" href="/equipamentos/armas-brancas-basicas" @onclick="() => showEquipamentos = false">ARMAS BRANCAS BÁSICAS</NavLink>
                        <NavLink class="nav-link medieval-link" href="/equipamentos/armas-brancas-avancadas" @onclick="() => showEquipamentos = false">ARMAS BRANCAS AVANÇADAS</NavLink>
                        <NavLink class="nav-link medieval-link" href="/equipamentos/armas-brancas-avancadas-2" @onclick="() => showEquipamentos = false">ARMAS BRANCAS AVANÇADAS (2)</NavLink>
                    </div>
                }
            </div>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool showEquipamentos = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleEquipamentos()
    {
        showEquipamentos = !showEquipamentos;
    }
}
