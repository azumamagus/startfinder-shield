@* NavMenu Futurista Cyberpunk *@

<div class="navbar futuristic-navbar px-3">
    <div class="d-flex align-items-center justify-content-between w-100">
        <!-- Nome / Logo -->
        <a class="navbar-brand neon-title" href="/">
            ⚡ Starfinder <span class="neon-sub">Shield</span>
        </a>

        <!-- Botão mobile -->
        <button title="Abrir Menu" class="btn btn-outline-neon d-lg-none" @onclick="ToggleNavMenu">
            <i class="bi bi-list fs-3"></i>
        </button>
    </div>
</div>

<!-- Sidebar / Menu -->
<div class="@NavMenuCssClass nav-scrollable futuristic-sidebar" @onclick="ToggleNavMenu">
    <nav class="nav flex-column mt-4">
        <div class="nav-item px-3">
            <NavLink class="nav-link neon-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2"></i> Início
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link neon-link" href="/condicoes">
                <i class="bi bi-shield-shaded me-2"></i> Condições de Jogo
            </NavLink>
        </div>

        <!-- Equipamentos com submenu -->
        <div class="nav-item px-3">
            <button class="nav-link neon-link d-flex justify-content-between align-items-center" @onclick:stopPropagation="true" @onclick="ToggleEquipamentos">
                <span><i class="bi bi-plus-square-fill me-2"></i> Equipamentos</span>
                <i class="bi" @(showEquipamentos ? "bi-chevron-up" : "bi-chevron-down" )></i>
            </button>
            @if (showEquipamentos)
            {
                <div class="ms-4 mt-2">
                    <NavLink class="nav-link neon-sublink" href="/equipamentos/armas-brancas-basicas" @onclick="() => showEquipamentos = false">Armas Brancas Básicas</NavLink>
                    <NavLink class="nav-link neon-sublink" href="/equipamentos/armas-brancas-avancadas" @onclick="() => showEquipamentos = false">Armas Brancas Avançadas</NavLink>
                    <NavLink class="nav-link neon-sublink" href="/equipamentos/armas-brancas-avancadas-2" @onclick="() => showEquipamentos = false">Armas Brancas Avançadas (2)</NavLink>
                </div>
            }
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool showEquipamentos = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : "show";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleEquipamentos()
    {
        showEquipamentos = !showEquipamentos;
    }
}
