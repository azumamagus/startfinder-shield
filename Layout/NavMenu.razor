@* Importação da fonte medieval já está no CSS global *@

<div class="top-row medieval-navbar">
    <div class="container-fluid">
        <a class="navbar-brand medieval-title" href="">Starfinder.Shield</a>
        <button title="Menu de Navegação" class="navbar-toggler medieval-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable medieval-menu" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link medieval-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Início
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link medieval-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Contador
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link medieval-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Clima
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <button class="nav-link medieval-link medieval-conditions-btn" @onclick="ShowConditions">
                <span class="bi bi-shield-shaded" aria-hidden="true"></span> Condições de Jogo
            </button>
        </div>
    </nav>
</div>

@if (showConditions)
{
    <div class="medieval-modal-backdrop" @onclick="HideConditions">
        <div class="condicoes-modal" @onclick:stopPropagation>
            <CondicoesDeJogo OnClose="HideConditions" />
        </div>
    </div>
}

@code {
    private bool collapseNavMenu = true;
    private bool showConditions = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ShowConditions()
    {
        showConditions = true;
    }

    private void HideConditions()
    {
        showConditions = false;
    }
}
