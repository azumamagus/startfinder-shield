@* Sidebar component - clean and minimal. JS controls opening/closing via classes on #sidebar *@

<div id="sidebar" class="futuristic-sidebar" role="navigation">
    <div class="sidebar-header d-flex align-items-center justify-content-between px-3">
        <div class="sidebar-brand">
            <span class="neon-logo">⚡ Starfinder Shield</span>
        </div>
        <button id="closeSidebar" class="btn-close btn-close-white d-lg-none" aria-label="Fechar menu"></button>
    </div>

    <nav class="nav flex-column mt-3 px-2" aria-label="Main navigation">
        <div class="nav-item">
            <NavLink class="nav-link neon-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2"></i> Início
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link neon-link" href="/condicoes">
                <i class="bi bi-shield-shaded me-2"></i> Condições de Jogo
            </NavLink>
        </div>

        <div class="nav-item">
            <button class="nav-link neon-link d-flex justify-content-between align-items-center" @onclick:stopPropagation="true" @onclick="ToggleEquipamentos">
                <span><i class="bi bi-plus-square-fill me-2"></i> Equipamentos</span>
                <i class="bi @(showEquipamentos ? "bi-chevron-up" : "bi-chevron-down")"></i>
            </button>
            @if (showEquipamentos)
            {
                <div class="ms-3 mt-2">
                    <NavLink class="nav-link neon-sublink" href="/equipamentos/armas-brancas-basicas">Armas Brancas Básicas</NavLink>
                    <NavLink class="nav-link neon-sublink" href="/equipamentos/armas-brancas-avancadas">Armas Brancas Avançadas</NavLink>
                    <NavLink class="nav-link neon-sublink" href="/equipamentos/armas-brancas-avancadas-2">Armas Brancas Avançadas (2)</NavLink>
                </div>
            }
        </div>
    </nav>
</div>

@code {
    private bool showEquipamentos = false;
    private void ToggleEquipamentos() => showEquipamentos = !showEquipamentos;
}
